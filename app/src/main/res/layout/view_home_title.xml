<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_home_head_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorAccent">


    <ImageView
        android:id="@+id/app_home_head_iv_weather"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_sun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_home_head_tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="15℃"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/app_home_head_tv_city"
        app:layout_constraintLeft_toRightOf="@+id/app_home_head_iv_weather"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/app_home_head_tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-1dp"
        android:text="上海市"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/app_home_head_iv_weather"
        app:layout_constraintTop_toBottomOf="@+id/app_home_head_tv_weather"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/app_home_head_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020年5月"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text18"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>